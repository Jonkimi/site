// page-opacity

.post-block {
    background: #fff;
    border-radius: 0 0 16px 16px;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,.12),0 3px 1px -2px rgba(0,0,0,.06),0 1px 5px 0 rgba(0,0,0,.12);
    padding: 40px
    background: rgba(255, 255, 255, 0.85);
}

div>div article + article.post-block  {
    border-radius: 16px;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,.12),0 3px 1px -2px rgba(0,0,0,.06),0 1px 5px 0 rgba(0,0,0,.12),0 -1px .5px 0 rgba(0,0,0,.09);
    margin-top: 12px;
}

.sidebar { //文章目錄&本站概要區塊透明
  opacity: 0.85;
}

.header-inner { //標題+分頁處區塊透明
  background: rgba(255,255,255,0.85);
}

.pagination { //底部換頁處透明
    background: rgba(255, 255, 255, 0.85);
    border-radius: 16px;
    border-top: initial;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,.12),0 3px 1px -2px rgba(0,0,0,.06),0 1px 5px 0 rgba(0,0,0,.12),0 -1px .5px 0 rgba(0,0,0,.09);
    margin: 12px 0 0;
    padding: 10px 0 10px
}

.popup { //搜尋透明
  opacity: 0.9;
}

.comments { //評論區透明
    background: rgba(255, 255, 255, 0.85);
    margin: 60px 0 0 0;
    padding: 16px;
}


